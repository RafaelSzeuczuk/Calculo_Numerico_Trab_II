<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="700" prefWidth="900" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="calcNumericoGUI.controllers.Capitulo2Controller">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <Button onAction="#voltar" text="Voltar" />
            <Label style="-fx-font-size:16px; -fx-font-weight:bold;" text="Capítulo 2 - Execução de Métodos" />
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL">
            <AnchorPane>
                <Label layoutX="10" layoutY="10" text="Entrada (mesmo formato do arquivo txt):" />
                <TextArea fx:id="entradaTextArea" layoutX="10" layoutY="35" prefHeight="240" prefWidth="860" promptText="Exemplo: funcao: e^(-x^2)-cos(x) fi: cos(x)-e^(-x^2) + x a: 1 b: 2 delta: 0.001 n: 50" text="funcao:&#10;fi:&#10;a:&#10;b: &#10;delta:&#10;n:&#10;&#10;" wrapText="true" />
                <HBox layoutX="10" layoutY="285" spacing="10">
                    <Button onAction="#executarMetodos" text="Executar métodos" />
                    <Button onAction="#limparEntrada" text="Limpar Entrada" />
                    <Button onAction="#limparSaida" text="Limpar Saída" />
                </HBox>
            </AnchorPane>

            <AnchorPane>
                <Label layoutX="10" layoutY="10" text="Saída (relatório):" />
                <TextArea fx:id="saidaTextArea" editable="false" layoutX="10" layoutY="35" prefHeight="300" prefWidth="860" wrapText="false" />
            </AnchorPane>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <Label text="Todos os métodos executados: Bisseção, Regula Falsi, Secante, Newton, MIL" />
        </HBox>
    </bottom>
</BorderPane>
